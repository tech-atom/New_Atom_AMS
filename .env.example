# Environment Configuration for ATOM SHAALE AMS
# Create this file: .env (in project root)
# NEVER commit this file to version control!
# Add to .gitignore: .env

# Flask Configuration
SECRET_KEY=change_this_to_a_very_strong_random_key_at_least_32_chars
FLASK_ENV=production
FLASK_DEBUG=False

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=12345
DB_NAME=lms_system
DB_POOL_SIZE=32

# Security Configuration
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting (using Redis)
RATELIMIT_STORAGE_URL=redis://localhost:6379/0
RATELIMIT_STRATEGY=fixed-window

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB
ALLOWED_EXTENSIONS=txt,pdf,png,jpg,jpeg,gif,mp4,webm,csv,xlsx

# HTTPS Configuration (if running Flask directly - not needed with Nginx)
# PREFERRED_URL_SCHEME=https

# Cloudflare Configuration (for trusted proxy)
CLOUDFLARE_IPS=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/cognitiopro/app.log

# Generate SECRET_KEY with:
# python -c "import secrets; print(secrets.token_hex(32))"
